# ============================================================================
# ST. PATRICK'S CATHOLIC CHURCH - ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this file to .env and update the values for your environment
# ============================================================================

# Server Configuration
NODE_ENV=development
PORT=3001
CORS_ORIGIN=http://localhost:3000

# Database Configuration (MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_USER=st_patricks_user
DB_PASSWORD=your_secure_database_password
DB_NAME=st_patricks_db

# Authentication & Security
JWT_SECRET=your_jwt_secret_minimum_32_characters_long_and_very_secure
BCRYPT_ROUNDS=12

# File Upload Configuration
MAX_FILE_SIZE=52428800
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,video/mp4,video/avi,video/quicktime,audio/mpeg,audio/wav,audio/ogg,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document,text/plain

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-gmail-app-password
EMAIL_FROM=noreply@stpatricks.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cloud Storage (Optional - Cloudinary)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# External APIs (Optional)
DIOCESE_API_URL=https://api.archdiocesebulawayo.org
VATICAN_API_URL=https://api.vatican.va
ZCBC_API_URL=https://api.zcbc.co.zw

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=your_ga_id_here

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Development/Debug Settings
DEBUG_MODE=false
LOG_LEVEL=info
ENABLE_SWAGGER=true
